@model WebRhProject.Models.ViewModels.DemissaoViewModel

@{
    ViewData["Title"] = "Demissao";
}

<h1>Demissão</h1>

<h3>Tem certeza que deseja demitir este colaborador?</h3>
<div>
    @if (Model != null && Model.Colaboradores != null && Model.Colaboradores.Count > 0)
    {
        var colaborador = Model.Colaboradores.FirstOrDefault();

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => colaborador.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => colaborador.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => colaborador.Sobrenome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => colaborador.Sobrenome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => colaborador.DataNascimento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => colaborador.DataNascimento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => colaborador.Cargo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => colaborador.Cargo.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => colaborador.SalarioBase)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => colaborador.SalarioBase)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => colaborador.Empresa)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => colaborador.EmpresaId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => colaborador.DataAdmissao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => colaborador.DataAdmissao)
            </dd>
        </dl>

        <form asp-action="Demissao">
            <input type="hidden" asp-for="ColaboradorId" value="@colaborador.Id" />
            <input type="submit" value="Confirmar Demissão" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    }
    else
    {
        <p>Nenhum colaborador foi selecionado.</p>
        <form>
            <input type="button" value="Voltar" onclick="history.back()" class="btn btn-primary" />
        </form>
    }
</div>
