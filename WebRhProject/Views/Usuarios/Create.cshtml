@model WebRhProject.Models.ViewModels.UsuarioFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-validation-summary="All" class="text-danger"></div> 
            <div class="form-group">
                <label asp-for="Usuario.Email" class="control-label"></label>
                <input asp-for="Usuario.Email" class="form-control" />
                <span asp-validation-for="Usuario.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.Senha" class="control-label"></label>
                <input asp-for="Usuario.Senha" class="form-control" />
                <span asp-validation-for="Usuario.Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario.ConfirmarSenha" class="control-label"></label>
                <input asp-for="Usuario.ConfirmarSenha" class="form-control" />
                <span asp-validation-for="Usuario.ConfirmarSenha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Usuario.ColaboradorId" class="control-label">Colaborador</label>
                <select asp-for="Usuario.ColaboradorId" asp-items="@(new SelectList(Model.Colaboradores,"Id","Nome","Sobrenome"))" class="form-control">
                    <option value="">Selecione um colaborador</option>
                </select>
                <span asp-validation-for="Usuario.ColaboradorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
