@model WebRhProject.Models.ViewModels.LoginViewModel

<div class="login-container">
    <h1 class="login-header">Login</h1>

    <form asp-action="Login" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control input-field" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" class="form-control input-field" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-login">Entrar</button>
    </form>

    <div>
        <a asp-action="Create" class="signup-link">Cadastrar um usuário</a>
    </div>
</div>
